
@{
    ViewBag.Title = "Settings";
}
<div class="container" id="body">
    <h1>Account Settings</h1>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row panel-config">
                <div class="col-md-2 col-sm-12">
                    <img class="img-circle" src="~/Resources/Images/default.png" width="150px" height="150px" />
                </div>
                <div class="col-md-10 col-sm-12">
                    <h2><strong>BRAYLER SANCHEZ PEGUERO</strong></h2>
                    <h4>Braylersanchez19@gmail.com</h4>
                    <div class="row">
                        <div class="col-md-3 col-sm-6">
                            <label><strong class="text-primary">Membership: </strong>None</label>
                        </div>
                        <div class="col-md-1 col-sm-6">
                            <button class="btn btn-xs btn-success"><i class="fa fa-plus" aria-hidden="true"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   <div class="col-md-12" style="height:100%;">
       <div class="row">
           <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 bhoechie-tab-menu">
               <div class="list-group">
                   <a href="#" class="list-group-item active text-center a-tab">
                       <h4 class="fa fa-user"></h4><br />General Info
                   </a>
                   <a href="#" class="list-group-item text-center a-tab">
                       <h4 class="fa fa-lock"></h4><br />Passsword
                   </a>
                   <a href="#" class="list-group-item text-center a-tab">
                       <h4 class="fa fa-id-card"></h4><br />Membership
                   </a>
                   <a href="#" class="list-group-item text-center a-tab">
                       <h4 class="fa fa-cog"></h4><br />Settings
                   </a>x
                   <a href="#" class="list-group-item text-center a-tab">
                       <h4 class="fa fa-credit-card-alt"></h4><br />Payment
                   </a>
               </div>
           </div>
           <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11 bhoechie-tab-container">
               <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 bhoechie-tab">
                   <!-- General info section -->
                   <div class="bhoechie-tab-content active" style="height: 390px;">
                       <h3 class="text-primary">General Info <i class="fa fa-user" aria-hidden="true"></i></h3>
                       <form>
                           <div class="panel panel-default">
                               <div class="panel-heading">User information</div>
                               <div class="panel-body">
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="email">Email address</label>
                                           <input type="email" class="form-control" id="email" readonly="readonly">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="user-name">User name</label>
                                           <input type="text" class="form-control" id="user-name">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="gender">Gender</label>
                                           <input type="text" class="form-control" id="gender">
                                       </div>
                                   </div>
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name">Name</label>
                                           <input type="text" class="form-control" id="name">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name">Last name</label>
                                           <input type="text" class="form-control" id="last-name">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name">Second last name</label>
                                           <input type="text" class="form-control" id="slast-name">
                                       </div>
                                   </div>
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="id-type">ID Type</label>
                                           @Html.DropDownList("Type ID", new SelectListItem[] {
                                                new SelectListItem { Text = "2017", Value = "2017" },
                                                new SelectListItem { Text = "2017", Value = "2016" },
                                                new SelectListItem { Text = "2017", Value = "2015" }
                                            }, new { @class = "form-control", @id = "id-type" })
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="id-number">ID</label>
                                           <input type="text" class="form-control" id="id-number">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="birthdate">Birthdate</label>
                                           <input type="text" class="form-control" id="birthdate">
                                       </div>
                                   </div>
                               </div>
                           </div>                                                    
                           
                           <div class="panel panel-default">
                               <div class="panel-heading">Address information</div>
                               <div class="panel-body">
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="city">City</label>
                                           <input type="text" class="form-control" id="city">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="sector">Sector</label>
                                           <input type="text" class="form-control" id="sector">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="address">Address</label>
                                           <input type="text" class="form-control" id="address">
                                       </div>
                                   </div> 
                               </div>
                           </div>                          
                           
                           <div class="panel panel-default">
                               <div class="panel-heading">Other information</div>
                               <div class="panel-body">
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="primary-phone">Primary phone</label>
                                           <input type="text" class="form-control" id="primary-phone">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="secondary-phone">Secondary Phone</label>
                                           <input type="text" class="form-control" id="secondary-phone">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="cellphone">Cellphone</label>
                                           <input type="text" class="form-control" id="cellphone">
                                       </div>
                                   </div>  
                               </div>
                           </div>
                                                    
                           <div class="row">
                               <div class="col-md-12">
                                   <button type="submit" class="btn btn-primary pull-right">
                                       Save <i class="fa fa-save" aria-hidden="true"></i>
                                   </button>
                               </div>
                           </div>
                       </form>
                   </div>
                   <!-- Password settings section -->
                   <div class="bhoechie-tab-content" style="height: 390px;">
                       <h3 class="text-primary">Password settings <i class="fa fa-lock" aria-hidden="true"></i></h3>
                       <form>
                           <div class="panel panel-default">
                               <div class="panel-heading">Change password</div>
                               <div class="panel-body">
                                   <div class="row">
                                       <div class="form-group col-md-12 col-sm-12">
                                           <label for="email">Email address</label>
                                           <input type="email" class="form-control" id="email" readonly="readonly">
                                       </div>
                                   </div>
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="old-password">Old password</label>
                                           <input type="password" class="form-control" id="old-password">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="new-password">New password</label>
                                           <input type="password" class="form-control" id="new-password">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name">Confirm password</label>
                                           <input type="password" class="form-control" id="confirm-password">
                                       </div>
                                   </div>                                   
                               </div>
                           </div>
                           <div class="row">
                               <div class="col-md-12" style="padding-top: 50px;">
                                   <button type="submit" class="btn btn-primary pull-right">
                                       Save <i class="fa fa-save" aria-hidden="true"></i>
                                   </button>
                               </div>
                           </div>
                       </form>
                   </div>
                   <!-- Membership search -->
                   <div class="bhoechie-tab-content" style="height: 390px;">
                       <h3 class="text-primary">Membership settings <i class="fa fa-cog" aria-hidden="true"></i></h3>
                       <form>
                           <div class="panel panel-default">
                               <div class="panel-heading">Change membership</div>
                               <div class="panel-body">
                                   <div class="row">
                                       <div class="form-group col-md-6 col-sm-6">
                                           <label for="email">Email address</label>
                                           <input type="email" class="form-control" id="email" readonly="readonly">
                                       </div>
                                       <div class="form-group col-md-6 col-sm-6">
                                           <label for="name">Name</label>
                                           <input type="text" class="form-control" id="name">
                                       </div>
                                   </div>
                                   <div class="row">
                                       <div class="form-group col-md-6 col-sm-6">
                                           <label for="name">Last name</label>
                                           <input type="text" class="form-control" id="last-name">
                                       </div>
                                       <div class="form-group col-md-6 col-sm-6">
                                           <label for="name">Birthdate</label>
                                           <input type="text" class="form-control" id="last-name">
                                       </div>
                                   </div>                                   
                               </div>
                           </div>
                           <div class="row">
                               <div class="col-md-12" style="padding-top: 50px;">
                                   <button type="submit" class="btn btn-primary pull-right">
                                       Save <i class="fa fa-save" aria-hidden="true"></i>
                                   </button>
                               </div>
                           </div>
                       </form>
                   </div>
                   <!-- Settings section-->
                   <div class="bhoechie-tab-content" style="height: 390px;">
                       <h3 class="text-primary">Settings <i class="fa fa-cog" aria-hidden="true"></i></h3>
                       <form>
                           <div class="panel panel-default">
                               <div class="panel-heading">Default movie settings</div>
                               <div class="panel-body">
                                   <div class="row">                                       
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name-card">Movie mode</label>
                                            @Html.DropDownList("Mode", new SelectListItem[] {
                                                new SelectListItem { Text = "Estandar", Value = "Estandar" },
                                                new SelectListItem { Text = "Superior", Value = "Superior" }
                                            }, "Mode", new { @class = "form-control" })
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name-card">Movie options</label>
                                           @Html.DropDownList("Resolution", new SelectListItem[] {
                                                new SelectListItem { Text = "240p", Value = "240" },
                                                new SelectListItem { Text = "480p", Value = "480" },
                                                new SelectListItem { Text = "720p", Value = "720" },
                                                new SelectListItem { Text = "1080p", Value = "1080" },
                                                new SelectListItem { Text = "1440p", Value = "1440" }
                                            }, "Resolution", new { @class = "form-control" })
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name-card">Playback speed</label>
                                           @Html.DropDownList("Speed", new SelectListItem[] {
                                                new SelectListItem { Text = "0.5x", Value = "0.5" },
                                                new SelectListItem { Text = "0.75x", Value = "0.75" },
                                                new SelectListItem { Text = "1x", Value = "1" },
                                                new SelectListItem { Text = "1.25x", Value = "1.25" },
                                                new SelectListItem { Text = "1.5x", Value = "1.5" },
                                                new SelectListItem { Text = "1.75x", Value = "1.75" },
                                                new SelectListItem { Text = "2x", Value = "2" }
                                            }, "Speed", new { @class = "form-control" })
                                       </div>
                                   </div>
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name-card">Language</label>
                                           @Html.DropDownList("Language", new SelectListItem[] {
                                                new SelectListItem { Text = "Spanish", Value = "Spanish" },
                                                new SelectListItem { Text = "English", Value = "English" }
                                            }, "Language", new { @class = "form-control" })
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name-card">Subtittle</label>
                                           @Html.DropDownList("Subtittle", new SelectListItem[] {
                                                new SelectListItem { Text = "Spanish", Value = "Spanish" },
                                                new SelectListItem { Text = "English", Value = "English" },
                                                new SelectListItem { Text = "French", Value = "French" }                                               
                                            }, "Subtittle", new { @class = "form-control" })
                                       </div>
                                   </div>
                               </div>
                           </div>

                           <div class="panel panel-default">
                               <div class="panel-heading">Application settings</div>
                               <div class="panel-body">
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name-card">Language</label>
                                           @Html.DropDownList("Language", new SelectListItem[] {
                                                new SelectListItem { Text = "Spanish", Value = "Spanish" },
                                                new SelectListItem { Text = "English", Value = "English" }
                                            }, "Language", new { @class = "form-control" })
                                       </div>                                                                              
                                   </div>                                   
                               </div>
                           </div>

                           <div class="row">
                               <div class="col-md-12">
                                   <button type="submit" class="btn btn-primary pull-right">
                                       Save <i class="fa fa-save" aria-hidden="true"></i>
                                   </button>
                               </div>
                           </div>
                       </form>
                   </div>
                   <!-- Payment section-->
                   <div class="bhoechie-tab-content" style="height: 390px;">
                       <h3 class="text-primary">Payment info <i class="fa fa-credit-card" aria-hidden="true"></i></h3>
                       <form>                           
                           <div class="panel panel-default">
                               <div class="panel-heading">Change payment</div>
                               <div class="panel-body">
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="name-card">Name on card</label>
                                           <input type="text" class="form-control" id="name-card" style="width:100%">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="card-number">Card Number</label>
                                           <input type="text" class="form-control" id="card-number" style="width:100%">
                                       </div>
                                   </div>
                                   <div class="row">
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="cvc">CVC</label>
                                           <input type="text" class="form-control" id="cvc">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="exp-month">Expiration month</label>
                                           <input type="text" class="form-control" id="exp-month">
                                       </div>
                                       <div class="form-group col-md-4 col-sm-4">
                                           <label for="exp-year">Expiration year</label>
                                           <input type="password" class="form-control" id="exp-year">
                                       </div>
                                   </div>
                               </div>
                           </div>
                           <div class="row">
                               <div class="col-md-12" style="padding-top: 50px;">
                                   <button type="submit" class="btn btn-primary pull-right">
                                       Save <i class="fa fa-save" aria-hidden="true"></i>
                                   </button>
                               </div>
                           </div>
                       </form>
                   </div>
               </div>
           </div>
       </div>
   </div>
</div>



